<h2>Provider:show</h2>

<h3>Synopsis</h3>
<p>Show details about a provider</p>

<h3>Request format</h3>
<p><code>/providers/:id(.json)</code></p>

<table>
  <thead>
  <tr>
    <td>Parameter</td>
    <td>Description</td>
  </tr>
  </thead>

  <tbody>
    <tr>
      <td>id</td>
      <td>Either a slug or id</td>
    </tr>
  </tbody>

</table>

<h3>JSON Response format</h3>
<pre class="radius pretty_json">
  <%= render template: "providers/show", formats: [:json] %>
</pre>


<% content_for :breadcrumbs do %>
    <li><a href="<%= providers_path %>">Providers</a></li>
    <li class="current"><a href="<%= request.url %>">Provider:show</a></li>
<% end %>